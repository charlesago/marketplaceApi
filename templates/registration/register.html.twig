{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <main class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center mb-4" style="color: #2c3e50;">Inscription</h1>

                <div class="card shadow-lg border-0 rounded-lg">
                    <div class="card-body p-5">
                        {{ form_start(registrationForm, {'attr': {'class': 'form'}}) }}

                        <div class="form-group mb-3">
                            {{ form_label(registrationForm.email, 'Adresse e-mail', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Votre email'}}) }}
                            {{ form_errors(registrationForm.email) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Votre mot de passe'}}) }}
                            {{ form_errors(registrationForm.plainPassword) }}
                        </div>

                        <div class="form-group form-check mb-4">
                            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(registrationForm.agreeTerms, 'Accepter les conditions', {'label_attr': {'class': 'form-check-label'}}) }}
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>

                        <button type="submit" class="btn btn-primary w-100" style="background-color: #2c3e50; border: none;">S'inscrire</button>

                        {{ form_end(registrationForm) }}
                    </div>
                </div>

                <div class="text-center mt-4">
                    <a href="{{ path('app_login') }}" style="color: #2c3e50; text-decoration: none;">Déjà inscrit ? Connectez-vous ici</a>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
